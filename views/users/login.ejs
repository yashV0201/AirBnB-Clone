<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>Login</h1>
        <form  method="POST" action="/login" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" placeholder="Enter your username" type="text" class="form-control" required>
            </div>
            
            <div class="mb-3 mt-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" placeholder="Enter your password" type="password" class="form-control" required>
                <div class="invalid-feedback">Password required</div>
            </div>
            <button class="btn btn-dark add-btn mt-3 signup-btn">Login</button>
        </form>
    </div>
</div>